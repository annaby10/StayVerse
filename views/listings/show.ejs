<% layout('/layouts/boilerplate.ejs') -%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
          <h3>Listing Details</h3>
         </div>
<!-- bootstrap 5 Card -->
    <div class="card col-6 offset-3 show-card mt-2 listing-card">
        <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="<%=listing.image.filename%>">
        <div class="card-body mt-3">
            <p class="card-text">
            <b><%= listing.title %></b><br/>
            <%=listing.description%><br/>            
            &#8377; <%=listing.price.toLocaleString("en-IN")%> <br/>
            <%=listing.location%> <br/>
            <%=listing.country%>
            </p>
      
        </div>
      </div>

      <div class="btns">
        <a href="/listings/<%=listing._id%>/edit%>" class="btn btn-dark col-1 offset-3 add-btn">Edit</a>

    <!-- DeletePath -->
        <form action="/listings/<%=listing._id%>?_method=Delete" method="post">
            <button class="btn btn-dark offset-5">Delete</button>
        </form>
     </div>
</html>