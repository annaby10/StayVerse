<% layout('/layouts/boilerplate.ejs') -%>
<body>

    <div class="row">
        <div class="col-8 offset-2 mt-4">

    <h3>Edit Your Listing</h3>

    <form action="/listings/<%=listing._id%>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3 mt-4">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
            <div class="invalid-feedback">Add Title</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" cols="75" rows="2" class="form-control" required><%=listing.description%></textarea>
            <div class="invalid-feedback">Add Description</div>
        </div>

        <div class="mb-3">
            Original Listing Image <br>
            <img src="<%=listing.image.url%>" />                  
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Upload New Image</label>
            <input type="file" class="form-control" name="listing[image]">
            <div class="invalid-feedback">Image Url Must Added</div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]"  value="<%=listing.price%>" class="form-control" required>
                <div class="invalid-feedback">Invalid Price</div>
            </div>

            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="listing[country]"  value="<%=listing.country%>" class="form-control" required>
                <div class="invalid-feedback">Invalid Country</div>
            </div>
        </div>

        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="listing[location]"  value="<%=listing.location%>" class="form-control" required>
            <div class="invalid-feedback">Invalid Location</div>
        </div>

        <button class="btn btn-dark add-btn mb-4 mt-3">Edit</button>
    </form>


</div>
</div>    
</body>